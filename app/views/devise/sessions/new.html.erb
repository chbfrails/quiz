<section class='login'>
  <div class='main'>
    <h3>Please Log In, or <%= link_to 'Sign up', new_user_registration_path %></h3>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class='form-group'>
          <label><i class='fa fa-envelope-o' aria-hidden='true'></i> Email</label>
          <%= f.email_field :email, autofocus: true, type: 'text', class: 'form-control' %>
        </div>
        <div class='form-group'>
          <label><i class='fa fa-key' aria-hidden='true'></i> Password</label>
          <%= f.password_field :password, autocomplete: 'off', type: 'password', class: 'form-control' %>
        </div>
        <% if devise_mapping.rememberable? -%>
            <div class='checkbox'>
              <label>
                <%= f.check_box :remember_me, type: 'checkbox' %> Remember Me
              </label>
            </div>
        <% end -%>
        <div class='text-center'>
          <%= f.submit 'Log in', class: 'btn btn-primary' %>
        </div>
    <% end %>
  </div>
</section>
