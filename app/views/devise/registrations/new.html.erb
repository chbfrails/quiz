<section class='register'>
  <div class='main'>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class='row'>
          <div class='col-md-6 col-sm-12'>
            <div class='col-sm-12 paddding-bottom-15'>
              <h3><strong>Registration Form</strong></h3>
            </div>
            <div class='form-group col-lg-12'>
              <label><i class='fa fa-envelope-o' aria-hidden='true'></i> Email</label>
              <%= f.email_field :email, autofocus: true, type: 'text', class: 'form-control' %>
            </div>
            <div class='form-group col-lg-12'>
              <label><i class='fa fa-key' aria-hidden='true'></i> Password</label>
              <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: 'off', type: 'password', class: 'form-control' %>
            </div>
            <div class='form-group col-lg-12'>
              <label><i class='fa fa-check-circle-o' aria-hidden='true'></i> Confirmed Password</label>
              <%= f.password_field :password_confirmation, autocomplete: 'off', type: 'password', class: 'form-control' %>
            </div>
            <div class='form-group col-lg-12 text-center'>
              <%= f.submit 'Sign up', :class => 'btn btn-primary' %>
            </div>
          </div>
          <div class='col-md-6 col-sm-12'>
            <div class='jumbotron'>
              <div class='container'>
                <h3><strong><i class='fa fa-exclamation-circle' aria-hidden='true'></i> Terms and Conditions</strong></h3>
                <p class='lead'>
                  ....
                </p>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</section>
